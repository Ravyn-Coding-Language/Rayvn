{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Rayvn",
	"scopeName": "source.rayvn",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#identifiers"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#braces"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.rayvn",
					"match": "\\b(let|log|if|elseif|else|while|return|fn)\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.rayvn",
					"match": "\\b\\d+\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.arithmetic.rayvn",
					"match": "\\+|\\-|\\*|\\/"
				},
				{
					"name": "keyword.operator.comparison.rayvn",
					"match": "==|!=|<=|>=|<|>"
				},
				{
					"name": "keyword.operator.assignment.rayvn",
					"match": "="
				}
			]
		},
		"identifiers": {
			"patterns": [
				{
					"name": "variable.other.rayvn",
					"match": "\\b(?!let\\b|log\\b|if\\b|elseif\\b|else\\b|while\\b|return\\b|fn\\b)[a-zA-Z_][a-zA-Z0-9_]*\\b"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.rayvn",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.rayvn",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"braces": {
			"patterns": [
				{
					"name": "punctuation.section.block.rayvn",
					"match": "[\\{\\}]"
				},
				{
					"name": "punctuation.section.parens.rayvn",
					"match": "[\\(\\)]"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.block.rayvn",
					"begin": "\\*\\*\\*",
					"end": "\\*\\*\\*"
				},
				{
					"name": "comment.line.rayvn",
					"match": "\\*\\*.*$"
				}
			]
		}
	}
}